buildscript {
    repositories {
        mavenLocal()
        mavenCentral()
        maven { url "https://oss.sonatype.org/content/repositories/snapshots/" }
        jcenter()
    }
    dependencies {
        classpath 'com.android.tools.build:gradle:1.5.0'
    }
}

repositories {
    mavenLocal()
    mavenCentral()
    maven { url "https://oss.sonatype.org/content/repositories/snapshots/" }
    maven { url "https://oss.sonatype.org/content/repositories/releases/" }
}

version = '0.0.1-SNAPSHOT'

ext {
    appName = '<%= id[:name] %>'
    gdxVersion = '<%= versions[:libgdx] %>'
    kitVersion = '<%= versions[:kit] %>'
    pdVersion = '<%= versions[:pd] %>'
}

apply plugin: "eclipse"
apply plugin: "idea"
apply plugin: "java"

dependencies {

    // libGDX
    compile "com.badlogicgames.gdx:gdx:$gdxVersion"
    compile "com.badlogicgames.gdx:gdx-backend-lwjgl:$gdxVersion"
    compile "com.badlogicgames.gdx:gdx-platform:$gdxVersion:natives-desktop"
    
    // KIT
    compile "net.mgsx.gdx:gdx-kit:$kitVersion"
    compile "net.mgsx.gdx:gdx-kit-desktop:$kitVersion"

    <% if extensions[:box2d] %>
    // Box2D
    compile "com.badlogicgames.gdx:gdx-box2d:$gdxVersion"
    compile "com.badlogicgames.gdx:gdx-box2d-platform:$gdxVersion:natives-desktop"
    <% end %>

    <% if extensions[:freetype] %>
    // Freetype
    compile "com.badlogicgames.gdx:gdx-freetype:$gdxVersion"
    compile "com.badlogicgames.gdx:gdx-freetype-platform:$gdxVersion:natives-desktop"
    <% end %>

    <% if extensions[:pd] %>
    // Pd
    compile "net.mgsx.gdx:gdx-pd-platform:$pdVersion:desktop"
    compile "net.mgsx.gdx:gdx-pd-platform:$pdVersion:natives-desktop"
    <% end %> 
    
}
